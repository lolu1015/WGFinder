<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeView">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="220dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ahv_iv_bildwg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ahv_iv_bildwg"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="20dp">
        <TextView
                android:drawableStart="@drawable/ic_euro"
                android:text="Preis"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/ahv_tv_preis" android:textSize="14sp"
                android:textAlignment="viewStart"/>
        <TextView
                android:drawableLeft="@drawable/ic_wohnflaeche"
                android:text="WohnflÃ¤che"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ahv_tv_wohnflaeche"/>
        <TextView
                android:drawableLeft="@drawable/ic_anzahlmitbew"
                android:text="Anzahl Mitbewohner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ahv_tv_mitbewohner"/>
        <TextView
                android:drawableLeft="@drawable/ic_ort"
                android:text="Ort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ahv_tv_ort"/>
        <TextView
                android:drawableLeft="@drawable/ic_raucher"
                android:text="Raucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ahv_tv_raucher"/>
        <TextView
                android:drawableLeft="@drawable/ic_tier"
                android:text="Tiere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ahv_tv_tiere"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>